<%- include("header") -%>
<div class="box" id="heading">
    <h1><%= tasks.title %></h1>
</div>

<div class="box">
    <% tasks.list.forEach((item) => { %>
        <form action="/delete/<%= item._id %>" method="post">
            <div class="item">
                <input onChange="this.form.submit()" type="checkbox"/>
                <p><%= item.name %> </p>
            </div>
            <input type="hidden" name="listName" value="<%= tasks.title %>"></input>
        </form>
    <%});%>

    <form class = "item" action="/" method="POST">
        <input type="text" name="task" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= tasks.title %>">+</button>
    </form>

</div>
